<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorPrimary"
        android:text="Description"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL: "
        android:layout_below="@id/description" />

    <TextView
        android:id="@+id/urlVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="http://sample.com "
        android:layout_below="@id/description"
        android:layout_toRightOf="@id/url" />

    <TextView
        android:id="@+id/starCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Star count: "
        android:layout_below="@id/urlVal" />

    <TextView
        android:id="@+id/starVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="100"
        android:layout_below="@id/urlVal"
        android:layout_toRightOf="@id/starCount" />

    <TextView
        android:id="@+id/forkCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fork count: "
        android:layout_below="@id/starVal" />


    <TextView
        android:id="@+id/forkVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="10"
        android:layout_below="@id/starVal"
        android:layout_toRightOf="@id/forkCount" />

    <TextView
        android:id="@+id/issueCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forkVal"
        android:layout_toLeftOf="@id/issueVal"
        android:clickable="true"
        android:textStyle="bold"
        android:text="open issues: "
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/issueVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_below="@+id/forkVal"
        android:text="10"
        android:layout_alignParentRight="true" />

</RelativeLayout>
